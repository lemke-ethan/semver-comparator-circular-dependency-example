{
    "compilerOptions": {
        "declaration": true,
        "target": "es2021",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["esnext"],
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "noEmit": false,
        "outDir": "out",
        "types": ["node"]
    },
    "include": ["src"]
}